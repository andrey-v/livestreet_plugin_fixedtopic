        <lang name="default">Андрей Г. Воронов</lang>
    </author>

    <!-- Домашнаяя страница -->
    <homepage>http://gladcode.ru</homepage>

    <!-- Текущая версия плагина -->
    <version>1.0</version>

    <!-- Требуемое для работы плагина окружение -->
    <requires>
        <!-- Версия LS-->
        <livestreet>1.x</livestreet>
        <!-- Перечень зависимых плагинов -->
        <!--<plugins></plugins>-->
    </requires>

    <!-- Полнотекстовое описание плагина, на необходимых языках -->
    <description>
        <lang name="default">Плагин фиксирует определенный топик в общем списке топиков</lang>
        <lang name="russian">Плагин фиксирует определенный топик в общем списке топиков</lang>
    </description>
</plugin>