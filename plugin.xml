<plugin>
    <!-- Имя плагина, возможно использование нескольких слов и дополнительных языков -->
    <name>
        <lang name="default">Fixed Topic</lang>
        <lang name="russian">Fixed Topic</lang>
    </name>

    <!-- Автор плагина. Здесь указываем свой ник или полное имя. Если ник, то достаточно дефолтного языка -->
